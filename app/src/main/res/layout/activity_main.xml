<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ch.ranil.android.flageo.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_margin="0dp"
        android:background="@color/primary"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <android.support.v7.widget.CardView
                android:id="@+id/btn_quizFlag2Name"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_flag2Name"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/preview_flag2name" />

                    <TextView
                        android:id="@+id/txt_flag2Name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/img_flag2Name"
                        android:text="@string/mode_flag2name"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_flag2Name_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_flag2Name_title"
                        android:layout_toEndOf="@+id/img_flag2Name"
                        android:text="@string/mode_flag2name_description"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_flag2Name_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_flag2Name_description"
                        android:layout_marginTop="12dp"
                        android:layout_toEndOf="@+id/img_flag2Name"
                        android:text="@string/record"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/btn_quizName2Flag"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_name2Flag"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/preview_name2flag" />

                    <TextView
                        android:id="@+id/txt_name2Flag_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/img_name2Flag"
                        android:text="@string/mode_name2flag"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_name2Flag_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_name2Flag_title"
                        android:layout_toEndOf="@+id/img_name2Flag"
                        android:text="@string/mode_name2flag_description"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_name2Flag_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_name2Flag_description"
                        android:layout_marginTop="12dp"
                        android:layout_toEndOf="@+id/img_name2Flag"
                        android:text="@string/record"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/btn_quizFlag2Map"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_flag2Map"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/preview_flag2map" />

                    <TextView
                        android:id="@+id/txt_flag2Map_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/img_flag2Map"
                        android:text="@string/mode_flag2map"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_flag2Map_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_flag2Map_title"
                        android:layout_toEndOf="@+id/img_flag2Map"
                        android:text="@string/mode_flag2map_description"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_flag2Map_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_flag2Map_description"
                        android:layout_marginTop="12dp"
                        android:layout_toEndOf="@+id/img_flag2Map"
                        android:text="@string/record"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
